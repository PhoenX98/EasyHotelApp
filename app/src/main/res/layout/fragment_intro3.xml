<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E8E8E8"
    tools:context=".Fragment.Intro3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ratingbar"
        android:cropToPadding="true"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bordes_redondos"
        android:text="Easy Hotel utiliza tu geolocalizaciÃ³n para poder ubicar los Hoteles, Hostales y Hospedajes mas cercanos a ti de forma efectiva."
        android:textAlignment="center"

        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Aceptar"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtmuestra1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:text="@string/txtCredits1"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Aceptar"
            android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="invisible"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtmuestra2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:text="@string/txtCredits2"
            android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="invisible"
            android:textStyle="bold|italic" />
    </LinearLayout>


</LinearLayout>