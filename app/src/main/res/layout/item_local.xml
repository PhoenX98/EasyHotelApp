<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ItemLista"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoLocal"
            android:layout_width="100dp"
            android:layout_height="108dp"
            android:layout_gravity="center" />
        <!--android:background="@color/colorAccent" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Nombre Empresa"
                android:textAlignment="center"
                android:textColor="@color/com_facebook_button_background_color_focused"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTipoLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Tipo_local"
                android:textColor="@color/com_facebook_button_background_color_focused"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtDireccionLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Direccion"
                android:textColor="@color/com_facebook_button_background_color_focused"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTarifaLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Tarifa"
                android:textAlignment="center"
                android:textColor="@color/com_facebook_button_background_color_focused"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>