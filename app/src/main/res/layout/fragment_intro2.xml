<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E8E8E8"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:weightSum="2"
    tools:context=".Fragment.Intro2">

    <ImageView
        android:layout_width="196dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="90dp"
        android:layout_marginVertical="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/logo_easy_miniatura"
        android:cropToPadding="true"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/imgIntro2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/intro_inicio2"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="20dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Bienvenido a la mejor plataforma de busqueda de Hoteles, Hostales y Hospedajes "
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>